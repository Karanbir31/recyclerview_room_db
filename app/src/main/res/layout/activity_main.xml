        android:layout_margin="8dp"
        tools:listitem="@layout/rcv_item"
        app:layoutManager="androidx.recyclerview.widget.LinearLayoutManager"
        android:padding="8dp"
        />

</androidx.appcompat.widget.LinearLayoutCompat>