<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    android:id="@+id/rcvLayout"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginTop="16dp">

    <ImageView
        android:id="@+id/rcvUserImage"
        android:layout_width="48dp"
        android:layout_height="48dp"
        android:layout_marginEnd="8.dp"
        android:contentDescription="user profile"
        android:scaleType="centerCrop"
        android:src="@color/cardview_dark_background"
        app:layout_constraintEnd_toStartOf="@id/rcvUserId"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/rcvUserId"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="user id"
        android:textSize="14sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@id/rcvUserImage"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/rcvUserName"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:layout_marginTop="8dp"
        android:text="user Name"
        android:textSize="14sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@id/rcvUserImage"
        app:layout_constraintTop_toBottomOf="@id/rcvUserId" />

</androidx.constraintlayout.widget.ConstraintLayout>
